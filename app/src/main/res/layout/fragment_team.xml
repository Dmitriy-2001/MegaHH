<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.team.TeamFragment"
    tools:ignore="ExtraText">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/TitleMedium22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnPrimary"
        app:title="@string/team"
        app:titleTextAppearance="@style/TitleMedium22"
        app:titleTextColor="?attr/colorOnPrimary" />

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four"
        android:paddingHorizontal="@dimen/sixteen"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/TextBold32"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/team_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/sixteen"
        android:paddingTop="@dimen/thirty_two"
        android:paddingEnd="@dimen/sixteen">

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/sixteen"
            android:text="@string/dev_1"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/sixteen"
            android:text="@string/dev_2"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/sixteen"
            android:text="@string/dev_3"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/sixteen"
            android:text="@string/dev_4"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/sixteen"
            android:text="@string/dev_5"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/sixteen"
            android:text="@string/dev_6"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

</LinearLayout>
