<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.team.TeamFragment"
    tools:ignore="ExtraText">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/TextBold32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnPrimary"
        app:title="@string/team"
        app:titleTextColor="?attr/colorOnPrimary" />

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four"
        android:paddingHorizontal="@dimen/big_padding"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/TextBold32"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/team_title"
            android:textAllCaps="false" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/big_padding"
        android:paddingTop="32dp"
        android:paddingEnd="@dimen/big_padding">

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="Дмитрий Баранюк" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="Селин Эглендже" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="Михаил Тресцов" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="Катерина Скорова" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="Анна Киритцева" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="Алдун Сардарлы" />

    </LinearLayout>


</LinearLayout>
