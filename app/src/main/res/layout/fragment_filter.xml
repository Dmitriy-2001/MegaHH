<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:tint="?attr/colorOnPrimary"
        app:title="@string/filter_settings"
        app:titleTextAppearance="@style/TitleMedium22"
        app:titleTextColor="?attr/colorOnPrimary" />

    <!-- Кнопка "Место работы" -->
    <TextView
        android:id="@+id/workplace"
        style="@style/TextRegula16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/workplace"
        android:paddingVertical="@dimen/twenty"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/four"
        app:layout_constraintEnd_toStartOf="@id/workplace_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageButton
        android:id="@+id/workplace_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@id/workplace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/workplace" />

    <!-- Кнопка "Индустрия" -->
    <TextView
        android:id="@+id/industry"
        style="@style/TextRegula16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/industry"
        android:paddingVertical="@dimen/twenty"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/four"
        app:layout_constraintEnd_toStartOf="@id/industry_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workplace" />

    <ImageButton
        android:id="@+id/industry_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@id/industry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/industry" />

    <!-- Поле "Введите сумму" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/salary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/sixteen"
        android:layout_marginVertical="@dimen/sixteen"
        android:paddingHorizontal="@dimen/sixteen"
        android:paddingVertical="@dimen/eight"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="@dimen/zero"
        app:layout_constraintTop_toBottomOf="@id/industry">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search_field"
            android:paddingVertical="@dimen/eight"
            android:paddingStart="@dimen/sixteen"
            android:paddingEnd="@dimen/eight">

            <TextView
                android:id="@+id/salary_hint"
                style="@style/TextRegular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expected_salary"
                android:textColor="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/salary_input"
                style="@style/TextRegula16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/salary_hint"
                android:background="@null"
                android:hint="@string/enter_amount"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="?attr/colorOnSurface" />

            <ImageView
                android:id="@+id/salary_clear"
                android:layout_width="@dimen/twenty_four"
                android:layout_height="@dimen/twenty_four"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_clear"
                android:visibility="gone"
                app:tint="@color/black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/checkbox_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/six"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salary_container">

        <TextView
            android:id="@+id/checkbox_text"
            style="@style/TextRegula16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hide_without_salary"
            android:textColor="?attr/colorOnPrimary" />

        <CheckBox
            android:id="@+id/hide_without_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue"
            android:theme="@style/CheckBoxTheme" />
    </LinearLayout>

    <!-- Кнопки -->
    <Button
        android:id="@+id/apply_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginEnd="@dimen/sixteen"
        android:layout_marginBottom="@dimen/eight"
        android:backgroundTint="@color/blue"
        android:paddingHorizontal="@dimen/eight"
        android:paddingVertical="@dimen/twenty"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/reset_filters" />

    <Button
        android:id="@+id/reset_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginEnd="@dimen/sixteen"
        android:layout_marginBottom="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:paddingHorizontal="@dimen/eight"
        android:paddingVertical="@dimen/twenty"
        android:text="@string/reset"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
