<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:tint="?attr/colorOnPrimary"
        app:title="@string/filter_settings"
        app:titleTextAppearance="@style/TitleMedium22"
        app:titleTextColor="?attr/colorOnPrimary" />

    <!-- Кнопка "Место работы" -->
    <TextView
        android:id="@+id/workplace"
        style="@style/TextRegula16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/workplace"
        android:paddingVertical="@dimen/twenty"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/four"
        app:layout_constraintEnd_toStartOf="@id/workplace_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageButton
        android:id="@+id/workplace_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@id/workplace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/workplace" />

    <!-- Кнопка "Индустрия" -->
    <TextView
        android:id="@+id/industry"
        style="@style/TextRegula16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/industry"
        android:paddingVertical="@dimen/twenty"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/four"
        app:layout_constraintEnd_toStartOf="@id/industry_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workplace" />

    <ImageButton
        android:id="@+id/industry_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@id/industry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/industry" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/salary"
        style="@style/filter_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:hint="Ожидаемая зарплата"
        android:textColorHint="?attr/colorOnSurface"
        app:endIconTint="@color/black"
        app:expandedHintEnabled="false"
        app:boxBackgroundMode="filled"
        app:hintTextColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/industry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/salary_enter"
            style="@style/filter_salary_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_amount"
            android:textColor="@color/black"

            android:textColorHint="?attr/colorOnSurface"
            android:textCursorDrawable="@drawable/edit_text_cursor" />

    </com.google.android.material.textfield.TextInputLayout>




    <CheckedTextView
        android:id="@+id/hide_without_salary"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/sixteen"
        android:checkMark="@drawable/checkbox"
        android:fontFamily="@font/ys_regular"
        android:fontWeight="400"
        android:gravity="start|center_vertical"
        android:paddingVertical="@dimen/six"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/hide_without_salary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salary" />


    <!-- Кнопки -->
    <Button
        android:id="@+id/apply_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginEnd="@dimen/sixteen"
        android:layout_marginBottom="@dimen/eight"
        android:backgroundTint="@color/blue"
        android:paddingHorizontal="@dimen/eight"
        android:paddingVertical="@dimen/twenty"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/reset_filters" />

    <Button
        android:id="@+id/reset_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginEnd="@dimen/sixteen"
        android:layout_marginBottom="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:paddingHorizontal="@dimen/eight"
        android:paddingVertical="@dimen/twenty"
        android:text="@string/reset"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
