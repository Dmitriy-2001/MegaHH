<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBold32">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/vacancy_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleMedium22">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="TextMedium16">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextRegula16">
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextRegular12">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="BottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="alpha">1.0</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemIconSize">@dimen/twenty_four</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">@dimen/thirty_two</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">@dimen/three_hundred</item>
        <item name="android:layout_height">@dimen/forty_eight</item>
        <item name="android:hint">@string/search_hint</item>
    </style>

    <style name="Widget.Diploma.TopAppBar" parent="Widget.Material3.Toolbar">
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:paddingStart">@dimen/four</item>
        <item name="android:paddingEnd">@dimen/eight</item>
        <item name="android:paddingTop">@dimen/eight</item>
        <item name="android:paddingBottom">@dimen/eight</item>
    </style>

    <style name="CompanyCard">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/light_gray</item>
        <item name="android:radius">@dimen/radius</item>
        <item name="android:padding">@dimen/sixteen</item>
    </style>

    <style name="Widget.Diploma.SalaryInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:radius">@dimen/radius</item>
    </style>

    <style name="Widget.Diploma.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="cornerRadius">@dimen/radius</item>
    </style>

    <style name="Notification">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_marginTop">@dimen/eight</item>
        <item name="android:paddingHorizontal">@dimen/sixteen</item>
        <item name="android:paddingVertical">@dimen/four</item>
        <item name="android:elevation">@dimen/four</item>
    </style>

    <style name="RVCard">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingHorizontal">@dimen/sixteen</item>
        <item name="android:paddingVertical">@dimen/eight</item>
    </style>

    <style name="verticalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="imageViewForError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/one_hundred_thirty_five</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/eight</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">@dimen/zero</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextAppearance">@style/TextRegular12</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/eight</item>
        <item name="android:textAppearance">@style/TextRegula16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FilterImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="filter_salary">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="android:focusable">true</item>
        <item name="android:contextClickable">true</item>
        <item name="hintTextAppearance">@style/TextRegular12</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="boxStrokeWidth">@dimen/zero</item>
        <item name="boxStrokeWidthFocused">@dimen/zero</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
    </style>

    <style name="filter_salary_edit_text">
        <item name="hintTextAppearance">@style/TextRegular12</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textAppearance">@style/TextRegula16</item>
        <item name="android:focusable">true</item>
        <item name="android:contextClickable">true</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:maxLength">9</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
