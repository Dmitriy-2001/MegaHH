<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBold32">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleMedium22">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="TextMedium16">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextRegular12">
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="BottomMenuStyle">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="alpha">1.0</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemIconSize">@dimen/twenty_four</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="itemPaddingTop">@dimen/medium_padding</item>
        <item name="itemPaddingBottom">@dimen/medium_padding</item>
    </style>

    <style name="Widget.Diploma.TextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:radius">@dimen/radius</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="Widget.Diploma.TopAppBar" parent="Widget.Material3.Toolbar">
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
    </style>

    <style name="VacancyCard">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/light_gray</item>
        <item name="android:radius">@dimen/radius</item>
        <item name="android:padding">@dimen/big_padding</item>
    </style>

    <style name="Widget.Diploma.SalaryInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:radius">@dimen/radius</item>
    </style>

    <style name="Widget.Diploma.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_medium</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:radius">@dimen/radius</item>
    </style>

    <style name="Notification">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:radius">@dimen/radius</item>
        <item name="android:paddingStart">@dimen/radius</item>
        <item name="android:paddingEnd">@dimen/radius</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

</resources>
